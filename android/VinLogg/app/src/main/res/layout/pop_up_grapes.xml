<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainBackground"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="557dp"
        android:layout_height="852dp"
        android:background="@drawable/background_popup"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewGrape"
            android:layout_width="522dp"
            android:layout_height="629dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="5dp"
            android:padding="10dp"
            app:layout_constraintBottom_toTopOf="@+id/precentGrape"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.605"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <Button
            android:id="@+id/cancelBtnGrape"
            android:layout_width="199dp"
            android:layout_height="37dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="12dp"
            android:background="@color/colorMainBackground"
            android:text="Avbryt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/addBtnVintagePopUp"
            app:layout_constraintHorizontal_bias="0.569"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextNewVintagae"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/addBtnGrape"
            android:layout_width="192dp"
            android:layout_height="39dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorMainBackground"
            android:text="Klar"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.622"
            app:layout_constraintStart_toEndOf="@+id/cancelBtnGrape"
            app:layout_constraintTop_toBottomOf="@+id/editTextNewVintagae"
            app:layout_constraintVertical_bias="0.905" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:padding="3dp"
            android:text="Välj druvor"
            android:textAlignment="center"
            android:textColor="@color/colorlila"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/recyclerViewGrape"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/precentGrape"
            android:layout_width="199dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"

            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:ems="10"
            android:hint="Ange % på druva"
            android:inputType="number|textPersonName"
            android:textAlignment="center"
            android:textColorHint="@color/colorlila"
            app:layout_constraintBottom_toTopOf="@+id/addBtnGrape"
            app:layout_constraintEnd_toStartOf="@+id/plusBtnGrapePopUp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recyclerViewGrape" />

        <Button
            android:id="@+id/plusBtnGrapePopUp"
            android:layout_width="199dp"
            android:layout_height="37dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:background="@color/colorMainBackground"
            android:text="+"
            app:layout_constraintBottom_toTopOf="@+id/addBtnGrape"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/precentGrape"
            app:layout_constraintTop_toBottomOf="@+id/recyclerViewGrape" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>