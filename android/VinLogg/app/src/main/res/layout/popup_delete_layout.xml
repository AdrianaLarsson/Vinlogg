<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainBackground"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="529dp"
        android:layout_height="362dp"
        android:background="@drawable/background_popup"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Spinner
            android:id="@+id/spinnerDelete"
            android:layout_width="370dp"
            android:layout_height="76dp"
            android:layout_marginBottom="140dp"
            android:background="@drawable/shape_input_search_vine"
            android:ems="10"
            android:inputType="textPersonName|textImeMultiLine|textPostalAddress|textEmailAddress|textEmailSubject"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textColorHint="#A7690000"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textViewDeleteShelve"
            android:layout_width="220dp"
            android:layout_height="69dp"
            android:layout_marginTop="44dp"
            android:text="Hur många flaskor ta ut från hyllan?"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/editTextNewVintagae"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/cancelBtnPopUpDelete"
            android:layout_width="199dp"
            android:layout_height="37dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="32dp"
            android:background="@color/colorMainBackground"
            android:text="Avbryt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/addBtnVintagePopUp"
            app:layout_constraintHorizontal_bias="0.569"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextNewVintagae"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/deleteBtnPopUp"
            android:layout_width="192dp"
            android:layout_height="39dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="28dp"
            android:background="@color/colorMainBackground"
            android:text="Ta ut"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextNewVintagae"
            app:layout_constraintVertical_bias="0.905" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>